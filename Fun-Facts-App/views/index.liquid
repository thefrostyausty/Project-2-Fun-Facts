{% layout "layout.liquid" %}
{% block content %}

<h1 class="display-4 text-center">This is the Random Facts App!</br>
    <small class="display-6 text-muted">Click 'Fun Fact Me!' to get a random fact!</small>
</h1>

<div class="btn-group">
    <p class="">{{ jsonData }} </br></p>
    <form action="/facts/faves" method="POST">
        <input type="text" name="fact" value="{{ jsonData }}" hidden >
        <button type="submit" class="btn btn-success">Favorites</button>
    </form>
</div>
<div class="btn-group btn-group-lg">
    <a href="/" class="btn btn-success">Fun Fact Me!</a>
    <a href="/auth/signup" class="btn btn-success">Sign Up</a>
    <a href="/auth/login" class="btn btn-success">Login</a>
</div>

{% endblock %}