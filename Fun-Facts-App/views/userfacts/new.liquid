{% layout "layout.liquid" %} {% block content %}
<div>
  <a href="/facts/faves"><button>Back to My Fave Facts</button></a>
{% for entries in journal %}
<div class="container">
    <p>{{ entries.fact }}</p>
    <p>{{ entries.owner.username }}</p>
    <!-- just want to see ANYTHING POPULATE AT THIS POINT -->
</div> 
{% if entries.owner == userId %}
        <div class="btn-group">
            <form action="/journals/:factsid/{{ entries.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
{% endfor %}   
{% endblock %}