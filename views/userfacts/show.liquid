{% layout 'layout.liquid'%}
{% block content %}
<a href="/" class="btn btn-primary">Back to random facts!</a>
{% for entries in journal %}
<div class="container">
    <p>{{ entries.fact }}</p>
    <p>{{ entries.owner.username }}</p>
    <!-- just want to see ANYTHING POPULATE AT THIS POINT -->
</div> 
{% if entries.owner == userId %}
        <div class="btn-group">
            <form action="/journals/{{ entries.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
{% endfor %}   
{% endblock %}